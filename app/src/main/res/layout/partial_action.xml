<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageTransferMoney"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/background_oval"
        android:src="@drawable/ic_transfer"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/m_transfer"
        app:layout_constraintEnd_toEndOf="@+id/imageTransferMoney"
        app:layout_constraintStart_toStartOf="@+id/imageTransferMoney"
        app:layout_constraintTop_toBottomOf="@+id/imageTransferMoney" />

    <ImageButton
        android:id="@+id/imagePay"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/background_oval"
        android:src="@drawable/ic_debit"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toEndOf="@+id/imageTransferMoney"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/m_payment"
        app:layout_constraintEnd_toEndOf="@+id/imagePay"
        app:layout_constraintStart_toStartOf="@+id/imagePay"
        app:layout_constraintTop_toBottomOf="@+id/imagePay" />

    <ImageButton
        android:id="@+id/imageShopping"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/background_oval"
        android:src="@drawable/ic_cart"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toEndOf="@+id/imagePay"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/m_commerce"
        app:layout_constraintEnd_toEndOf="@+id/imageShopping"
        app:layout_constraintStart_toStartOf="@+id/imageShopping"
        app:layout_constraintTop_toBottomOf="@+id/imageShopping" />

    <ImageButton
        android:id="@+id/imageService"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/background_oval"
        android:src="@drawable/ic_card"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toEndOf="@+id/imageShopping"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/card_service"
        app:layout_constraintEnd_toEndOf="@+id/imageService"
        app:layout_constraintStart_toStartOf="@+id/imageService"
        app:layout_constraintTop_toBottomOf="@+id/imageService" />

</androidx.constraintlayout.widget.ConstraintLayout>